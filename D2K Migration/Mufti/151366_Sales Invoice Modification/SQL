===================================P1
select * from
(
    select 
            ginview.fnc_uk uk,
            case when mod(row_num,2)=1 then invcode else null end invcode,
            case when mod(row_num,2)=1 then dc_barcode else null end dc_barcode,
            case when mod(row_num,2)=1 then dc_no else null end dc_no,
            case when mod(row_num,2)=1 then dc_date else null end dc_date,
            case when mod(row_num,2)=1 then dcqty else null end dcqty
    from 
        (
            SELECT 
                    ROW_NUMBER () OVER (PARTITION BY invcode ORDER BY invcode) row_num,
                    invcode,
                    dc_barcode,
                    dc_no,
                    dc_date,
                    dcqty
            FROM ginview.lv_salinv_ref_docs
        )
        where invcode = '@DocumentId@'
)
where invcode is not null
===============================P2
select * from
(
select 
        ginview.fnc_uk uk,
        case when mod(row_num,2)=0 then invcode else null end invcode,
        case when mod(row_num,2)=0 then dc_barcode else null end dc_barcode,
        case when mod(row_num,2)=0 then dc_no else null end dc_no,
        case when mod(row_num,2)=0 then dc_date else null end dc_date,
        case when mod(row_num,2)=0 then dcqty else null end dcqty
    from 
        (
            SELECT 
                    ROW_NUMBER () OVER (PARTITION BY invcode ORDER BY invcode) row_num,
                    invcode,
                    dc_barcode,
                    dc_no,
                    dc_date,
                    dcqty
            FROM ginview.lv_salinv_ref_docs
        )
        where invcode = '@DocumentId@'
)
where invcode is not null