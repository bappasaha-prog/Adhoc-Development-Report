DROP VIEW GINVIEW.CV_DC_ITEM_MATRIX_RSP;

/* Formatted on 06-04-2021 17:59:19 (QP5 v5.294) */
CREATE OR REPLACE FORCE VIEW GINVIEW.CV_DC_ITEM_MATRIX_RSP
(
   UK,
   DCCODE,
   ITEM,
   RSP,
   ITEM_SIZE,
   QTY
)
   BEQUEATH DEFINER
AS
     SELECT GINVIEW.FNC_UK                                  UK,
            dccode,
            category3 || ' ' || category2 || ' ' || category6 ITEM,
            challan_RSP                                     RSP,
            category4                                       ITEM_SIZE,
            SUM (challan_quantity)                          qty
       FROM ginview.lv_dc_item A, Ginview.lv_item B
      WHERE A.icode = B.code                             --AND dccode = 588974
   GROUP BY dccode,
            category3 || ' ' || category2 || ' ' || category6,
            challan_RSP,
            category4,
            challan_quantity
   ORDER BY dccode,
            category3 || ' ' || category2 || ' ' || category6,
            challan_RSP,
            category4,
            challan_quantity;
