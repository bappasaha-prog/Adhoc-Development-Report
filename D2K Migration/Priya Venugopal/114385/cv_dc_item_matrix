/* Formatted on 4/5/2021 5:18:50 PM (QP5 v5.294) */
CREATE OR REPLACE VIEW ginview.cv_dc_item_matrix
AS
     SELECT GINVIEW.FNC_UK       UK,
            dccode,
            department           Dept,
               category1
            || ' '
            || category2
            || ' '
            || category3
            || ' '
            || category5
            || ' '
            || category6
               ITEM,
            challan_RSP          RSP,
            challan_net_rate     Rate,
            category4            ITEM_SIZE,
            SUM (challan_quantity) qty,
            SUM (
               challan_net_rate * challan_quantity)
            OVER (
               PARTITION BY dccode,
                               category1
                            || ' '
                            || category2
                            || ' '
                            || category3
                            || ' '
                            || category5
                            || ' '
                            || category6,
                            challan_net_rate
               ORDER BY
                  dccode,
                     category1
                  || ' '
                  || category2
                  || ' '
                  || category3
                  || ' '
                  || category5
                  || ' '
                  || category6,
                  challan_net_rate)
               Amount,
            SUM (challan_net_rate * challan_quantity)
            OVER (PARTITION BY dccode, department ORDER BY dccode, department)
               Dept_amount,
            SUM (challan_net_rate * challan_quantity)
               OVER (PARTITION BY dccode ORDER BY dccode)
               Challan_amount
       FROM ginview.lv_dc_item A, Ginview.lv_item B
      WHERE A.icode = B.code --AND dccode = 4223460
   GROUP BY dccode,
            department,
               category1
            || ' '
            || category2
            || ' '
            || category3
            || ' '
            || category5
            || ' '
            || category6,
            challan_RSP,
            challan_net_rate,
            category4,
            challan_quantity
   ORDER BY dccode,
            department,
               category1
            || ' '
            || category2
            || ' '
            || category3
            || ' '
            || category5
            || ' '
            || category6,
            challan_RSP,
            challan_net_rate,
            category4,
            challan_quantity