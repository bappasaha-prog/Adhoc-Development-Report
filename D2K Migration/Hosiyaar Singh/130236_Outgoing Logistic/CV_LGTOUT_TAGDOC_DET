CREATE OR REPLACE VIEW ginview.cv_lgtout_tagdoc_det
AS
   SELECT ginview.fnc_uk      UK,
          lgtcode,
          A.DOCUMENT_NO,
          A.document_date,
          B.ORDER_ASSEMBLY_ICODE,
          B.ORDER_ASSEMBLY_ITEM_NAME,
          NVL (C.JOB_RATE, 0) JOB_RATE
     FROM GINVIEW.LV_LGTOUT_TAG_DOCS            A,
          GINVIEW.LV_PRD_WIP_TRANSACTION_DETAIL B,
          GINVIEW.LV_PRD_JOB_ORDER_DETAIL       C
    WHERE     A.DOCUMENT_ENTRY_CODE = B.WIPTXN_CODE
          AND B.JOBCODE = C.JOBCODE
          AND B.ORDER_ASSEMBLY_ICODE = C.ASSEMBLY_ICODE
--AND lgtcode = 36506087