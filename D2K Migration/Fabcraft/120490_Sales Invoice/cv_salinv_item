/* Formatted on 19/04/2021 10:41:54 (QP5 v5.294) */
  Create or replace view ginview.cv_salinv_item
  as
  SELECT ginview.fnc_uk                                UK,
         invcode,
         division || ' ' || section || ' ' || department Item,
         HSN_CODE                                      HSN,
         invoice_rate                                  Rate,
         UOM                                           Unit,
         SUM (invoice_quantity)                        Qty,
         SUM (invoice_quantity * invoice_rate)         Amount
    FROM ginview.lv_salinv_item A, ginview.lv_item B
   WHERE A.icode = B.code                               --AND invcode = 778883
GROUP BY invcode,
         division || ' ' || section || ' ' || department,
         HSN_CODE,
         invoice_rate,
         UOM
ORDER BY invcode,
         division || ' ' || section || ' ' || department,
         HSN_CODE,
         invoice_rate,
         UOM