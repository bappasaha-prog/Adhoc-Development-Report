create or replace view ginview.cv_po_item_matrix
as  
select 
ginview.fnc_uk UK,
ordcode,
SECTION||' '||DEPARTMENT||' ' ||CATEGORY1 ITEM,
category2 Design,
category3 Brand, 
Category5 Fabric,
Category6 Color,
HSN_CODE HSN, 
UOM UNIT,
order_rate rate, 
Category4 Item_Size,
sum(order_quantity) qty, 
sum(ITEM_GROSS_AMOUNT) Amount,
sum(ITEM_GROSS_AMOUNT) over (Partition by ordcode,category2,category3,Category5,Category6) Total_Amt
from ginview.lv_po_item A, ginview.lv_item B
where a.icode = b.code
and ordcode = 2339942
group by
ordcode,
SECTION||' '||DEPARTMENT||' ' ||CATEGORY1,
category2 ,
category3 , 
Category5 ,
Category6 , 
HSN_CODE , 
UOM ,
order_rate,
category4,
ITEM_GROSS_AMOUNT
order by
ordcode,
SECTION||' '||DEPARTMENT||' ' ||CATEGORY1,
category2 ,
category3 , 
Category5 ,
Category6 , 
HSN_CODE , 
UOM ,
order_rate,
category4,
ITEM_GROSS_AMOUNT