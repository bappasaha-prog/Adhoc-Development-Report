create or replace view ginview.cv_salinv_item_custom
as
select 
GINVIEW.FNC_UK UK,invcode,  category1||' '||category2||' '||category3 ITEm, invoice_rsp MRP, invoice_rate Rate, TAX_NAME, sum(invoice_quantity) qty, sum(invoice_quantity*invoice_rate) Amount
from ginview.lv_salinv_item A, ginview.lv_item B
where A.icode = B.code
--and invcode = 6588969
group By
invcode,  category1||' '||category2||' '||category3 , invoice_rsp, invoice_rate,TAX_NAME
order by
invcode,  category1||' '||category2||' '||category3 , invoice_rsp, invoice_rate,TAX_NAME
