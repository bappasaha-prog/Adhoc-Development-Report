/* Formatted on 16/11/2021 13:17:03 (QP5 v5.294) */
SELECT ginview.fnc_uk uk,
       X.invcode,
       SL,
       X.item,
       X.hsn_code,
       X.uom,
       X.invoice_rate,
       X.qty
  FROM (  SELECT invcode,
                 division || ' ' || section || ' ' || department item,
                 hsn_code,
                 invoice_rate,
                 uom,
                 SUM (invoice_quantity)                        qty
            FROM ginview.lv_salinv_item i, ginview.lv_item l
           WHERE i.icode = l.code                        --AND invcode = 64333
        GROUP BY invcode,
                 division || ' ' || section || ' ' || department,
                 hsn_code,
                 invoice_rate,
                 uom) X,
       (SELECT ROW_NUMBER ()
               OVER (PARTITION BY invcode ORDER BY invcode, item, hsn_code)
                  AS sl,
               invcode,
               item,
               hsn_code,
               uom
          FROM (  SELECT DISTINCT
                         invcode,
                         division || ' ' || section || ' ' || department item,
                         hsn_code,
                         uom
                    FROM ginview.lv_salinv_item A, ginview.lv_item B
                   WHERE A.ICODE = b.code             --AND invcode IN (64333)
                GROUP BY a.invcode,
                         division || ' ' || section || ' ' || department,
                         hsn_code,
                         uom
                ORDER BY a.invcode,
                         division || ' ' || section || ' ' || department)) Y
 WHERE X.INVCODE = Y.INVCODE AND X.ITEM = Y.ITEM --AND X.invcode = 64333