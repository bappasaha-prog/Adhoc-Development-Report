DROP VIEW GINVIEW.CV_TRIN_ITEM;

/* Formatted on 26-04-2021 16:16:56 (QP5 v5.294) */
CREATE OR REPLACE FORCE VIEW GINVIEW.CV_TRIN_ITEM
(
   UK,
   RTCODE,
   ITEM,
   HSN,
   RATE,
   UNIT,
   QTY,
   AMOUNT
)
   BEQUEATH DEFINER
AS
     SELECT GINVIEW.FNC_UK                                Uk,
            RTcode,
            division || ' ' || section || ' ' || Department Item,
            HSN_CODE                                      HSN,
            transfer_in_rate                              Rate,
            UOM                                           Unit,
            SUM (transfer_in_quantity)                    Qty,
            SUM (transfer_in_quantity * transfer_in_rate) Amount
       FROM GINVIEW.LV_TRIN_ITEM A, ginview.lv_item B
      WHERE A.ICODE = B.CODE                             --AND rtcode = 582119
   GROUP BY RTcode,
            division || ' ' || section || ' ' || Department,
            HSN_CODE,
            transfer_in_rate,
            UOM
   ORDER BY RTcode,
            division || ' ' || section || ' ' || Department,
            HSN_CODE,
            transfer_in_rate,
            UOM;
