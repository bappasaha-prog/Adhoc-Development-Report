/* Formatted on 19/06/2021 13:57:20 (QP5 v5.294) */
CREATE OR REPLACE VIEW ginview.cv_po_item_static_matrix
AS
     SELECT ginview.fnc_uk     UK,
            ordcode,
            category1          Product,
            image_name         image,
            category2          article,
            hsn_code           HSN,
            category3          COLOR,
            order_rate,
            SUM (
               CASE WHEN category4 = '35/04' THEN order_quantity ELSE NULL END)
               SIZE_3504,
            SUM (
               CASE WHEN category4 = '36/05' THEN order_quantity ELSE NULL END)
               SIZE_3605,
            SUM (
               CASE WHEN category4 = '37/06' THEN order_quantity ELSE NULL END)
               SIZE_3706,
            SUM (
               CASE WHEN category4 = '38/07' THEN order_quantity ELSE NULL END)
               SIZE_3807,
            SUM (
               CASE WHEN category4 = '39/08' THEN order_quantity ELSE NULL END)
               SIZE_3908,
            SUM (
               CASE WHEN category4 = '40/09' THEN order_quantity ELSE NULL END)
               SIZE_4009,
            SUM (
               CASE WHEN category4 = '41/10' THEN order_quantity ELSE NULL END)
               SIZE_4110,
            SUM (
               CASE WHEN category4 = '42/11' THEN order_quantity ELSE NULL END)
               SIZE_4211,
            SUM (
               CASE WHEN category4 = '43/12' THEN order_quantity ELSE NULL END)
               SIZE_4312,
            SUM (
               CASE WHEN category4 = '44/13' THEN order_quantity ELSE NULL END)
               SIZE_4413,
            SUM (order_quantity) qty
       FROM ginview.lv_po_item A, ginview.lv_item B
      WHERE A.ICODE = B.CODE                         --AND a.ordcode = 5243100
   GROUP BY ordcode,
            category1,
            image_name,
            category2,
            hsn_code,
            category3,
            order_rate