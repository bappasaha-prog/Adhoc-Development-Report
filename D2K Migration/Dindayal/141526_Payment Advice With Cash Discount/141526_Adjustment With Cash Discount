SELECT ginview.fnc_uk UK,
       entry_code,
       entry_type,
       reference_no,
       reference_date,
       reference_type,
       reference_name,
       arap_slcode,
       actual,
       pending,
       adjustment,
       refdetail,
       reference_doc_no,
       reference_doc_date,
       reference_due_date,
       REFERENCE_INSTRUMENT_DATE,
       REFERENCE_INSTRUMENT_DRAWNON,
       REFERENCE_INSTRUMENT_NO,
       ADDITIONAL_REFDETAIL,
       REFERENCE_REFSITE_SHRTNAME,
       REFERENCE_REFSITE_NAME,
       REFERENCE_OWNER_SHRTNAME,
       REFERENCE_OWNER_SITE,
       finvchmain_code,
       purinvmain_invcode,
       cash_discount_percentage,
       cash_discount_amount
  FROM GINVIEW.LV_FINANCE_ADJUSTMENT Adj,
       (SELECT finvchmain_code,
               purinvmain_invcode,
               cash_discount_percentage,
               cash_discount_amount
          FROM DDJN.finvchdn) CD
 WHERE     entry_code = CD.FINVCHMAIN_CODE(+)
       AND refentcode = CD.PURINVMAIN_INVCODE(+)
--       AND Adj.ENTRY_CODE = 6946898